<?xml version="1.0"?>
<Container version="1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://raw.githubusercontent.com/cirx08/Unraid/main/template_schema.xsd">
    <Name>WeddingShare</Name>
    <Repository>cirx08/wedding_share:latest</Repository>
    <Registry>https://hub.docker.com/r/cirx08/wedding_share</Registry>
    <Branch>
        <Tag>latest</Tag>
        <TagDescription>Latest stable release</TagDescription>
    </Branch>
    <Network>bridge</Network>
    <WebUI>http://[IP]:[PORT:5000]/</WebUI>
    <Privileged>false</Privileged>
    <Support>https://github.com/Cirx08/WeddingShare/issues</Support>
    <Project>https://github.com/Cirx08/WeddingShare</Project>
    <Overview>
        A basic photo sharing site, allowing anyone to upload and view shared albums.
    </Overview>
    <Beta>False</Beta>
    <Category>MediaApp:Photos MediaServer:Photos Productivity: Tools: Other: Status:Stable</Category>
    <ExtraSearchTerms>photo album share image gallery pictures wedding event party</ExtraSearchTerms>
    <Icon>https://raw.githubusercontent.com/Cirx08/WeddingShare/master/logo.png</Icon>
    <TemplateURL>https://raw.githubusercontent.com/Cirx08/Unraid/main/wedding_share.xml</TemplateURL>
    <Screenshot>https://raw.githubusercontent.com/Cirx08/WeddingShare/main/screenshots/Homepage.png</Screenshot>
    <Screenshot>https://raw.githubusercontent.com/Cirx08/WeddingShare/main/screenshots/Gallery.png</Screenshot>
    <Screenshot>https://raw.githubusercontent.com/Cirx08/WeddingShare/main/screenshots/Homepage-Mobile.png</Screenshot>
    <Screenshot>https://raw.githubusercontent.com/Cirx08/WeddingShare/main/screenshots/Gallery-Mobile.png</Screenshot>
    <Maintainer>
        <WebPage>https://github.com/cirx08</WebPage>
    </Maintainer>
    <Changes>
        Added initial release supporting v1.6.8.1
    </Changes>
    <Config Name="Port" Target="5000" Default="5000" Mode="tcp" Description="Container Port" Type="Port" Display="always-hide" Required="false" Mask="false">5000</Config>
    <Config Name="Title" Target="TITLE" Default="Wedding Share" Description="Application title to appear in headers" Type="Variable" Display="always-hide" Required="false" Mask="false">Wedding Share</Config>
    <Config Name="Logo" Target="LOGO" Default="/images/logo.png" Description="Relative path to the logo image" Type="Variable" Display="always-hide" Required="false" Mask="false">/images/logo.png</Config>
    <Config Name="Single Gallery Mode" Target="SINGLE_GALLERY_MODE" Default="false" Description="Should this instance host a single gallery instance" Type="Variable" Display="always-hide" Required="false" Mask="false">/images/logo.png</Config>
    <Config Name="Owner Username" Target="ACCOUNT_OWNER_USERNAME" Default="admin" Description="The username of the primary owner account" Type="Variable" Display="always-hide" Required="false" Mask="false">admin</Config>
    <Config Name="Owner Password" Target="ACCOUNT_OWNER_PASSWORD" Default="admin" Description="The password of the primary owner account" Type="Variable" Display="always-hide" Required="false" Mask="true">admin</Config>
    <Config Name="Config Path" Target="/app/config" Default="/var/lib/docker/volumes/wedding_share/_data/config" Description="Path to configuration related data" Type="Path" Display="advanced-hide" Required="true" Mask="false">/var/lib/docker/volumes/wedding_share/_data/config</Config>
    <Config Name="Uploads Path" Target="/app/wwwroot/uploads" Default="/var/lib/docker/volumes/wedding_share/_data/uploads" Description="Path to gallery images" Type="Path" Display="advanced-hide" Required="true" Mask="false">/var/lib/docker/volumes/wedding_share/_data/uploads</Config>
    <Config Name="Thumbnails Path" Target="/app/wwwroot/thumbnails" Default="/var/lib/docker/volumes/wedding_share/_data/thumbnails" Description="Path to image thumbnails" Type="Path" Display="advanced-hide" Required="true" Mask="false">/var/lib/docker/volumes/wedding_share/_data/thumbnails</Config>
    <Config Name="Custom Resources Path" Target="/app/wwwroot/custom_resources" Default="/var/lib/docker/volumes/wedding_share/_data/custom_resources" Description="Path to custom uploaded resource files" Type="Path" Display="advanced-hide" Required="true" Mask="false">/var/lib/docker/volumes/wedding_share/_data/custom_resources</Config>
</Container>
